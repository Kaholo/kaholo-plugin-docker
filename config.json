{
  "name": "Docker",
  "viewName": "Docker",
  "type": "executer",
  "execProgram": "node",
  "main": "app.js",
  "imgUrl": "logo.png",
  "version": "3.0.0",
  "description": "Build, Push and Pull Docker Containers or run other Docker Commands",
  "category": [
    "Containers"
  ],
  "keywords": [
    "cloud",
    "container",
    "image",
    "docker",
    "push",
    "pull",
    "tag",
    "repository",
    "cli"
  ],
  "methods": [
    {
      "name": "build",
      "viewName": "Build docker image",
      "params": [
        {
          "name": "PATH",
          "viewName": "Dockerfile Path",
          "type": "string",
          "description": "Absolute path of the directory containing the Dockerfile to build the image from.",
          "placeholder": "/home/username/",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_build/",
          "required": true
        },
        {
          "name": "TAG",
          "viewName": "Tag",
          "type": "string",
          "description": "If specified, tag the new Docker image with the specified tag.",
          "placeholder": "kaholo:1.0.0",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_tag/"
        }
      ]
    },
    {
      "name": "pull",
      "viewName": "Pull Image",
      "params": [
        {
          "name": "USER",
          "viewName": "Username",
          "type": "string",
          "description": "The username of the Docker user used to authenticate for this request.",
          "placeholder": "username",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_pull/"
        },
        {
          "name": "PASSWORD",
          "viewName": "Password",
          "type": "vault",
          "description": "The password of the Docker user used to authenticate for this request.",
          "placeholder": "pass1234!",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_pull/"
        },
        {
          "name": "IMAGE",
          "viewName": "Image Name",
          "type": "string",
          "description": "The name of the image to pull.",
          "placeholder": "kaholo",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_pull/",
          "required": true
        },
        {
          "name": "TAG",
          "viewName": "Image Tag",
          "type": "string",
          "description": "The tag/version of the image to pull. By default will use 'latest'.",
          "placeholder": "1.0.0",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_tag/"
        },
        {
          "name": "URL",
          "viewName": "Registry (optional)",
          "type": "string",
          "description": "If specified, pull the image from the specified registry/repository. By default will use the Docker Hub registry.",
          "placeholder": "docker.io",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_pull/"
        }
      ]
    },
    {
      "name": "pushImage",
      "viewName": "Push Image",
      "params": [
        {
          "name": "USER",
          "viewName": "Username",
          "type": "string",
          "description": "The username of the Docker user used to authenticate for this request.",
          "placeholder": "username",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_push/",
          "required": true
        },
        {
          "name": "PASSWORD",
          "viewName": "Password",
          "type": "vault",
          "description": "The password of the Docker user used to authenticate for this request.",
          "placeholder": "pass1234!",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_push/",
          "required": true
        },
        {
          "name": "image",
          "viewName": "Image Name",
          "type": "string",
          "description": "The name of the image to push.",
          "placeholder": "kaholo",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_push/",
          "required": true
        },
        {
          "name": "imageTag",
          "viewName": "Image Tag",
          "type": "string",
          "description": "The tag/version of the image to push. By default will use 'latest'.",
          "placeholder": "1.0.0",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_tag/"
        },
        {
          "name": "url",
          "viewName": "Registry URL",
          "type": "string",
          "description": "If specified, push the image to the specified registry/repository. By default will use the Docker Hub registry.",
          "placeholder": "https://registry-1.docker.io",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_push/"
        }
      ]
    },
    {
      "name": "tag",
      "viewName": "Tag image",
      "params": [
        {
          "name": "sourceImage",
          "viewName": "Source Image",
          "type": "string",
          "description": "Source Image in the same format as SOURCE_IMAGE in \"docker tag\" command.",
          "placeholder": "docker.io/alpine:latest",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_tag/",
          "required": true
        },
        {
          "name": "targetImage",
          "viewName": "Target Image",
          "type": "string",
          "description": "Target Image in the same format as TARGET_IMAGE in \"docker tag\" command.",
          "placeholder": "my-repo.io/my-new-tag:1.0.0",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_tag/",
          "required": true
        }
      ]
    },
    {
      "name": "cmdExec",
      "viewName": "Docker Command",
      "params": [
        {
          "name": "USER",
          "viewName": "Username",
          "type": "string",
          "description": "The username of the Docker user used to authenticate for this request.",
          "placeholder": "username",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_push/"
        },
        {
          "name": "PASSWORD",
          "viewName": "Password",
          "type": "vault",
          "description": "The password of the Docker user used to authenticate for this request.",
          "placeholder": "pass1234!",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_push/"
        },
        {
          "name": "registryUrl",
          "viewName": "Registry URL",
          "type": "string",
          "description": "URL of the docker registry.",
          "placeholder": "https://registry-1.docker.io",
          "learnUrl": "https://docs.docker.com/engine/reference/commandline/image_push/"
        },
        {
          "name": "PARAMS",
          "viewName": "Docker Command",
          "type": "string",
          "description": "The docker command to run. No need to specify 'docker' in the start of the command.",
          "placeholder": "build https://github.com/docker/rootfs.git#container:docker",
          "learnUrl": "https://docs.docker.com/"
        }
      ]
    }
  ]
}
